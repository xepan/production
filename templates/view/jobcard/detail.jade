.main-box.no-header.clearfix
  header.main-box-header.clearfix
    //- h2.pull-left {type}DocType{/} No : {jobcard_no}F-4301{/}
  .main-box-body.clearfix
    #invoice-companies.row
      .col-sm-4.invoice-box
        .invoice-icon.hidden-sm
          i.fa.fa-home
          |  From
        .invoice-company
          h4  {jobcard_contact}Sushil Milkee{/}
          .xepan-push
          p {address}
            | 54  Point Tower point,
            .xepan-push
            | Karauli. 322219
            .xepan-push
            | INDIA{/}
      .col-sm-4.invoice-box
          h4 Sale Order No.: {sale_order_no}2513 {/}
          .xepan-push
          .atk-col-3 Order Create:  {created_at}16/01/2016{/}
  
      .col-sm-4.invoice-box.invoice-box-dates
          .invoice-dates
            .row.clearfix
              .col-md-6.invoice-number
                strong Jobcard No.
              .col-md-6.invoice-number.input-full-width
                span.pull-right.atk-form-row.atk-form-field(style="margin:auto;") {$id}
            .invoice-date.clearfix
              strong Create Date:
              span.pull-right {$created_at}
            .clearfix
              strong Due Date:
              span.pull-right {$due_date}
            .clearfix
              strong Day:
              span.pull-right {day}5 days left{/}


    .invoice-box.clearfix     
    .table-responsive
      table.table
        thead
          tr
            th.text-center
              span Sr-No.
            th
              span Item Name
            th
              span Specification
            th.text-center
              span Quantity
        tbody
          tr
            td.text-center
              | {id}0011{/}
            td
              a.user-subhead
                strong.h3| {order_item}Business Card{/}
              div
                a.user-link| {$department}
              div
                small|  {from_department}Design{/}/ {current_department}Printing{/}/ {next_department}Discard{/}
            td
              div
                strong Paper Type:
                span.pull-center {sider}100 GSM{/}
              .xepan-push
                strong Printing Side:
                span.pull-center Both Side
             
            td.text-center
              |{percent}99{/}
  .invoice-box-total.clearfix
    .invoice-summary.row
      .col-md-4.col-sm-6.col-xs-12
        .invoice-summary-item
          h1|{$action}Approved By-
              .xepan-push
            div|  Approved person
              .pull-right
                a.user-subhead
                  strong  {$contact}Sushil
            div|  Approved date
              span.pull-right {$create_date}
      .col-md-4.col-sm-6.col-xs-12
        .invoice-summary-item
           h1|Department
              .xepan-push
            div| From Department
              span.pull-right{form_department}Design{/}
            div| Current Department
              span.pull-right {current_department}printing{/}
            div| Next Department
              span.pull-right {next_department} Discard{/}
      .col-md-4.col-sm-6.col-xs-12
        .invoice-summary-item
             h1|  JobCard Create By
                .xepan-push
              div|  person
                .pull-right
                  a.user-subhead
                    strong  {$personname}Anshu
              div|  Department
                span.pull-right {$current_depatment}printing
              div|  Create Date
                span.pull-right {$create_date}
