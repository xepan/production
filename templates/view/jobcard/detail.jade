.main-box.no-header.clearfix
  header.main-box-header.clearfix
    .row 
      .col-md-4
        span.pull-right{from_dept_row}From Department : {form_department}Design{/}{/}
      .col-md-4
        h2(style="text-align:center;") Staus: {$status}
      .col-md-4
        span.pull-right {next_dept_row} Next Department : {next_department} Discard{/}{/}
  .main-box-body.clearfix
    #invoice-companies.row
      .col-sm-4.invoice-box
        .invoice-icon.hidden-sm
          i.fa.fa-home
          |  From
        div
          h4  {customer_name}customer name{/}
          .xepan-push
          p {address}{/}
          p {city}{/},&nbsp;{state}{/},&nbsp;{country}{/}
      .col-sm-4.invoice-box
          h4 Order No.: {order_no}{/}
          .xepan-push
          | Create at:  {order_created_at}{/}

      .col-sm-4.invoice-box.invoice-box-dates
          .invoice-dates
            .row.clearfix
              .col-md-6.invoice-number
                strong Jobcard No.
              .col-md-6.invoice-number.input-full-width
                span.pull-right.atk-form-row.atk-form-field(style="margin:auto;") {$id}
            .invoice-date.clearfix
              strong Create Date:
              span.pull-right {$created_at}
            .clearfix
              strong Due Date: 
              span.pull-right {$due_date}
    .invoice-box.clearfix     
    .table-responsive
      table.table
        thead
          tr
            th
              span Item
            th
              span Quantity
            th
              span Progress/Detail
            th
              span Completed
            th
              span Forwarded
            th
              span Dispatched
            th
        tbody
          tr
            td(style="vertical-align:top")
              a.user-subhead
                strong.h4| {$order_item}
              div 
                small
                  {$extra_info}
            td(style="vertical-align:top") {$order_item_quantity}
            td(style="vertical-align:top")
              |To Received : {$toreceived}
              br
              |Processing : {$processing}
            td(style="vertical-align:top")
              {$completed}  
            td(style="vertical-align:top")
              {$forwarded}
            td(style="vertical-align:top")
              {$dispatched}
            td(style="vertical-align:top")