.xepan-grid.main-box.clearfix.atk-table.atk-table-zebra.atk-table-bordered(id="{$_name}" class="{$class}")
    {Pannel}
    header.main-box-header.clearfix.atk-actions(class=" {$class} ")
        div.filter-block( style="100%")
            .pull-right {$grid_buttons} 
            .form-group.pull-right.xepan-filter-form
                span(class="form-control pull-left")|{$quick_search}
                    i(class="fa fa-search search-icon")
    {/Pannel}
    .main-box-body.clearfix.table
        table.table.user-list.table-hover(style="width:100%")
            {header}
            thead
                {cols}{col}
                th
                  span Jobcard
                th
                  span Duration
                th
                  span Quantity
                th
                  span Department
                th
                  span toreceived
                th
                  span processing
                th
                  span forwarded
                th
                  span completed
                th
                  span Status
                th
                {/}{/}
            {/}
            {$subheader}

            tbody
                {rows}{row}
                tr(class="{$odd_even}" data-id="{$id}")
                    {cols}
                    td(style="width: 30%;")
                      {avatar}
                      img(src='img/samples/scarlet-159.png', alt='')
                      {/}
                      a.user-link(href = '{url}?page=xepan_production_jobcarddetail&document_id={$id}{/}')
                            {$id}
                      small
                          a.user-subhead(href='{url}?page=xepan_commerce_salesorderdetail&document_id={$id{/}') {document_no}1111{/}
                          br
                          a.user-subhead(href='{url}?page=xepan_commerce_customerdetail&contact_id={$id}{/}'){customer_id}Xavoctacnocratspvt.ltd{/}   

                    td
                        .row
                            span {$created_date} 
                        .row        
                            span {days_elapsed} days elapsed{/}
                    td
                        span {$order_item_quantity}
                    td
                        span {departmental_status}processing{/}
                    td
                        span {$toreceived}
                    td
                        span {$processing}
                    td
                        span {$forwarded}
                    td
                        span {$completed}
                    td
                        span {$action}
                    td(style="width: 10%;")
                        {$edit}
                        {$delete}
                    
                    {/}
                {/}{/}
                {not_found}
                div.row
                    .col-md-12.text-center.alert.alert-warning(role="alert")
                        span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
                {/}

            {totals}
            tfoot
                tr(class="totals")
                    {cols}{col}
                    <td {$tdparam}>
                    {$content}
                    </td>
                    {/}{/}
            {/}
        {$Paginator}
