.xepan-grid.main-box.clearfix.atk-table.atk-table-zebra.atk-table-bordered(id="{$_name}" class="{$class}")
    {Pannel}
    header.main-box-header.clearfix.atk-actions(class=" {$class} ")
        div.filter-block( style="100%")
            .pull-right {$grid_buttons} 
            .form-group.pull-right.xepan-filter-form
                span(class="form-control pull-left")|{$quick_search}
                    i(class="fa fa-search search-icon")
    {/Pannel}
    .main-box-body.clearfix.table-responsive
        table.table.user-list.table-hover.footable.toggle-circle-filled(style="width:100%")
            {header}
            thead.xepan-hover-hand
                {cols}{col}
                th
                th(id="{$name_sortid}")
                    span OutSource Parties  
                    span(style= "cursor:pointer; cursor: hand; max-width:600px;"){$name_sort}
                th(id="{$status_sortid}" )
                    span Status 
                    span(style= "cursor:pointer; cursor: hand; max-width:600px;"){$status_sort}
                th(id="{$panding_jobcard_sortid}" data-hide="phone")
                    span Panding Job-Card 
                    span(style= "cursor:pointer; cursor: hand; max-width:600px;"){$panding_jobcard_sort}
                th
                th
                {/}{/}
            {$subheader}

            tbody
                {rows}{row}
                tr(class="{$odd_even}" data-id="{$id}")
                    {cols}
                    td
                        {$selected}
                    td(style="width: 30%;")
                        {avatar}
                        img(src='img/samples/scarlet-159.png', alt='')
                        {/}
                        //- a.user-link(href='{url}?page=xepan_production_outsourcepartiesdetails&contact_id={$id}{/}') {name}outsource party{/}
                        a.user-link.do-view-outsourceparties(href='#' data-id="{$id}") {name}outsource party{/}
                        span.user-subhead| {os_address}F-4301{/}
                    td
                        {action} InActive{/}
                    td
                        {panding_jobcard} 0{/}
                    td(style="width: 15%;")
                        {$edit}
                        {$delete}
                        {/}
                    
                    {/}
                {/}{/}
                {not_found}
                div.row
                    .col-md-12.text-center.alert.alert-warning(role="alert")
                        span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
                {/}

            {totals}
            tfoot
                tr(class="totals")
                    {cols}{col}
                    <td {$tdparam}>
                    {$content}
                    </td>
                    {/}{/}
            {/}
        {$Paginator}